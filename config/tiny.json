{
    "network" : {
        "input_size" : 4,
        "channels_input" : 64,
        "channels_output": 4,
        "channels_hidden": 128,
        "kernel_sizes" : [5, 3],
        "strides" : [2, 1],
        "tr_channels_input" : 192
    },

    "train" : {
        "exp_path" : "TRUNet",
        "log":{
            "directory" : "./exp",
            "ckpt_iter" : "max",
            "iters_per_ckpt" : "10000",
            "iters_per_valid" : 500
        },

        "optimization":{
            "n_iters" : 250000,
            "learning_rate" : 2e-4,
            "batch_size_per_gpu" : 8
