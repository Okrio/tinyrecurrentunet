        "loss":{
            "ell_p":1,
            "ell_p_lambda":1,
            "stft_lambda":1,
            "stft_config":{
                "sc_lamda": 0.5,
                "mag_lambda": 0.5,
                "band": "full",
                "hop_sizes": [50, 120, 240],
                "win_lengths": [240, 600, 1200],
                "fft_sizes": [512, 1024, 2048]
            }
        }       
    },
    
    "trainset" : {
        "root": "./content/MyDrive/Insone/DNSDataset/",
        "crop_length_sec": 2,
        "sample_rate":48000
    },
    
    "gen" : {
        "output_directory": "./exp"
    },
    
    "dist": {
        "dist_backend" : "nccl",
        "dist_url": "tcp://localhost:54321"
    }
